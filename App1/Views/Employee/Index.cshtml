@model IEnumerable<App1.Models.Employee>

<h2>Employees</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(Model=> Model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(Model=> Model.Position)
        </th>
        <th>
          
        </th>
    </tr>

    @foreach (var Employee in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Employee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Employee .Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Employee.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Employee.Position)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@Employee.Id">Details</a>
            </td>
        </tr>
    }

</table>